<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
	<name>helloworld_template</name>
	<author>Aladar Barthi</author>
	<creationDate>August 2018</creationDate>
	<copyright>Copyright (C) 2018 - 2020 Updatr.io. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@updatr.io</authorEmail>
	<authorUrl>updatr.io</authorUrl>
	<version>1.0.0</version>
	<description>Hello World template for Joomla.</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
        <folder>fields</folder>
	</files>
	<positions>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>bottom</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/templates/helloworld_template/fields">
                <field
                    name="download_key"
                    type="updatr_downloadkey"
                    label="Download Key"
                    description="Download key field description"
                    default=""
                    server="Hello World Joomla Template Updates"
                    filter="string"
                />
			</fieldset>
		</fields>
	</config>
    <updateservers>
        <server type="extension" name="Hello World Joomla Template Updates">http://sandbox.updatr.vagrant/api/v1/update-channels/hello-world-joomla-template-updates.xml</server>
    </updateservers>
</extension>
